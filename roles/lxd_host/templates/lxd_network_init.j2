#!/bin/bash
{% set h = hostvars[inventory_hostname] %}
#
# ANSIBLE TEMPLATE - IF .SH, DO NOT EDIT THIS FILE
#

# create a 'forward' on the lxd host for external traffic

lxc network forward create lxdbr0 {{ h['ansible_host'] }}

# import forward.yml as authoritative port forwarding definition

lxc network forward edit lxdbr0 {{ h['ansible_host'] }} < /tmp/forward.yml

# to show current runtime configuration, run:

lxc network forward show lxdbr0 

