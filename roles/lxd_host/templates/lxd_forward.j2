{% set h = hostvars[inventory_hostname] %}

# create a 'forward' on the lxd host for external traffic

lxc network forward create lxdbr0 {{ h['listen_ip'] }}

# import forward.yml as authoritative port forwarding definition

lxc network forward edit lxdbr0 {{ h['listen_ip'] }} < /tmp/forward.yml

# to show current runtime configuration, run:
 
lxc network forward list lxdbr0

